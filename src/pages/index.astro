      .counter-wrap{display:flex;justify-content:center;margin-top:18px;width:100%}
      .counter{display:flex;align-items:center;gap:10px;padding:8px 14px;border:1px solid var(--line);border-radius:999px;background:rgba(255,255,255,.04);font-size:1.05rem;width:fit-content;margin:0 auto}
