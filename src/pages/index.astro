      *{box-sizing:border-box}
      body{margin:0;font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,Arial;background:linear-gradient(180deg,var(--bg),var(--bg2));color:var(--txt)}
      .section{min-height:100svh;display:flex;align-items:center;justify-content:center;padding:40px 20px;border-bottom:1px solid rgba(255,255,255,.08)}
      .container{width:min(1100px,100%)}
