      .subtitle{margin:14px auto 0;max-width:20ch;font-size:clamp(1rem,2vw,1.35rem);color:var(--muted)}
      .feature-grid{margin-top:26px;display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:14px}
      .feature{padding:22px;border-radius:16px;background:rgba(255,255,255,.04);border:1px solid var(--line)}
      .feature .ico{font-size:1.5rem;display:block;margin-bottom:8px}
      .feature b{font-size:1.2rem}
      .feature p{margin:8px 0 0;color:#c7d7ff}

      .wait-box{max-width:760px;margin:26px auto 0;padding:22px;border-radius:18px;background:rgba(255,255,255,.04);border:1px solid var(--line)}
      .row{display:flex;gap:10px;flex-wrap:wrap}
      input[type=email]{flex:1;min-width:230px;background:#0a1430;color:var(--txt);border:1px solid var(--line);border-radius:12px;padding:14px;font-size:1rem}
      button{background:#1f4f96;color:#fff;border:1px solid #3a6ec0;padding:14px 16px;border-radius:12px;font-weight:700;font-size:1rem;cursor:pointer}
      .ok{font-size:.95rem;color:#baffd5;margin-top:10px;display:none}

      .logo-grid{margin-top:26px;display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:14px}
      .logo-card{background:var(--card);border:1px solid var(--line);border-radius:14px;padding:10px}
      .logo-card img{width:100%;aspect-ratio:1/1;object-fit:cover;border-radius:10px}
      .label{margin-top:8px;color:#d3dfff;font-size:.95rem}
      @media (max-width: 760px){
        .hero-box{grid-template-columns:1fr;text-align:center}
        .hero-box img{margin:0 auto;width:180px;height:180px}
      }
    </style>
  </head>
