---
const logos = [
  { file: 'alfred-avatar-definitivo.png', label: 'Logo definitivo' },
  { file: '001-logo-style-emblem-for-telegram-avatar-an.png', label: 'Propuesta OpenAI refine' },
  { file: '001-flat-vector-logo-avatar-of-lobster-profe.png', label: 'Propuesta vectorial' },
  { file: 'avatar_02_tornasol_lobster_badge.png', label: 'Variante badge' },
  { file: 'avatar_04_tornasol_lobster_split.png', label: 'Variante split' },
  { file: 'avatar_08_flat_lobster_icon.png', label: 'Variante flat icon' }
];
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Alfred Claw Â· Acceso anticipado</title>
    <style>
      :root {
        --bg: oklch(0.16 0.03 260);
        --bg-soft: oklch(0.22 0.04 255);
        --card: oklch(0.28 0.04 255 / 0.55);
        --text: oklch(0.97 0.01 260);
        --muted: oklch(0.82 0.03 255);
        --line: oklch(0.58 0.06 250 / 0.35);
        --cta: oklch(0.72 0.16 245);
        --cta-dark: oklch(0.63 0.16 245);
        --accent: oklch(0.86 0.1 195);
      }
      * { box-sizing: border-box; }
      html, body { margin: 0; }
      body {
        font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        color: var(--text);
        background: radial-gradient(1200px 700px at 50% -10%, oklch(0.33 0.08 250 / 0.4), transparent 60%), linear-gradient(180deg, var(--bg), var(--bg-soft));
      }
      .section {
        min-height: 100svh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2.2rem 1rem;
        border-bottom: 1px solid oklch(0.58 0.04 255 / 0.2);
      }
      .container { width: min(1080px, 100%); }

      .hero {
        display: grid;
        grid-template-columns: 260px 1fr;
        gap: 2rem;
        align-items: center;
        background: var(--card);
        backdrop-filter: blur(8px);
        border: 1px solid var(--line);
        border-radius: 1.25rem;
        padding: 1.8rem;
      }
      .hero-logo {
        width: 260px;
        height: 260px;
        border-radius: 50%;
        border: 6px solid var(--accent);
        object-fit: cover;
      }
      .badge {
        display: inline-flex;
        align-items: center;
        gap: .35rem;
        padding: .35rem .65rem;
        border-radius: 999px;
        font-size: .78rem;
        color: var(--muted);
        border: 1px solid var(--line);
        background: oklch(0.3 0.03 255 / 0.45);
      }
      h1 {
        margin: .65rem 0 .5rem;
        font-size: clamp(2.2rem, 6vw, 4.6rem);
        line-height: .96;
        letter-spacing: -0.03em;
      }
      .lead {
        margin: 0;
        max-width: 26ch;
        color: var(--muted);
        font-size: clamp(1.05rem, 2.2vw, 1.45rem);
      }
      .hero-row {
        margin-top: 1rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: .65rem;
      }
      .cta {
        display: inline-block;
        text-decoration: none;
        background: linear-gradient(180deg, var(--cta), var(--cta-dark));
        color: #fff;
        border: 1px solid oklch(0.8 0.12 245 / 0.35);
        padding: .8rem 1.1rem;
        border-radius: .8rem;
        font-weight: 700;
      }
      .soon { color: var(--muted); font-size: .93rem; }

      .counter-wrap { margin-top: .8rem; display: flex; justify-content: flex-start; }
      .counter {
        display: inline-flex;
        align-items: center;
        gap: .45rem;
        border: 1px solid var(--line);
        border-radius: 999px;
        padding: .42rem .72rem;
        background: oklch(0.3 0.03 255 / 0.5);
      }
      .counter-num { font-weight: 700; }

      .center { text-align: center; }
      h2 {
        margin: 0;
        font-size: clamp(1.95rem, 4.8vw, 3.7rem);
        line-height: 1.02;
        letter-spacing: -0.02em;
      }
      .sub {
        margin: .8rem auto 0;
        max-width: 28ch;
        color: var(--muted);
        font-size: clamp(1rem, 2vw, 1.2rem);
      }
      .grid {
        margin-top: 1.35rem;
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: .85rem;
      }
      .tile {
        text-align: left;
        background: var(--card);
        border: 1px solid var(--line);
        border-radius: 1rem;
        padding: 1.1rem;
      }
      .tile .ico { font-size: 1.3rem; display: block; margin-bottom: .35rem; }
      .tile b { font-size: 1.1rem; }
      .tile p { margin: .4rem 0 0; color: var(--muted); font-size: .95rem; }

      .wait {
        margin: 1.1rem auto 0;
        max-width: 760px;
        background: var(--card);
        border: 1px solid var(--line);
        border-radius: 1rem;
        padding: 1rem;
      }
      .row { display: flex; gap: .65rem; }
      input[type=email] {
        flex: 1;
        min-width: 200px;
        border-radius: .75rem;
        border: 1px solid var(--line);
        background: oklch(0.24 0.03 255 / 0.75);
        color: var(--text);
        padding: .85rem .9rem;
        font-size: 1rem;
      }
      button {
        border-radius: .75rem;
        border: 1px solid oklch(0.8 0.12 245 / 0.35);
        background: linear-gradient(180deg, var(--cta), var(--cta-dark));
        color: #fff;
        font-weight: 700;
        padding: .85rem 1rem;
        white-space: nowrap;
        cursor: pointer;
      }
      .ok { display: none; margin-top: .7rem; color: oklch(0.9 0.13 155); font-size: .92rem; }

      .logos {
        margin-top: 1.25rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: .85rem;
      }
      .logo-card {
        background: var(--card);
        border: 1px solid var(--line);
        border-radius: .95rem;
        padding: .6rem;
      }
      .logo-card img {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        border-radius: .7rem;
      }
      .label { margin-top: .45rem; font-size: .9rem; color: var(--muted); }

      @media (max-width: 920px) {
        .hero { grid-template-columns: 1fr; text-align: center; }
        .hero-logo { width: 200px; height: 200px; margin: 0 auto; }
        .lead { margin-inline: auto; }
        .hero-row, .counter-wrap { justify-content: center; }
        .grid { grid-template-columns: 1fr; }
      }
      @media (max-width: 620px) {
        .row { flex-direction: column; }
        input[type=email], button { width: 100%; }
      }
    </style>
  </head>
  <body>
    <section class="section">
      <div class="container">
        <div class="hero">
          <img class="hero-logo" src="/alfred-landing/logos/alfred-avatar-definitivo.png" alt="Logo de Alfred" />
          <div>
            <span class="badge">ðŸ¦ž OpenClaw</span>
            <h1>ALFRED CLAW</h1>
            <p class="lead">Asistente digital para ejecutar, automatizar y resolver mÃ¡s rÃ¡pido.</p>
            <div class="hero-row">
              <a class="cta" href="#waitlist">Quiero acceso anticipado</a>
              <span class="soon">PrÃ³ximamente</span>
            </div>
            <div class="counter-wrap">
              <div class="counter"><span>ðŸ‘€</span><span class="counter-num" id="visit-count">â€¦</span></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container center">
        <h2>RÃ¡pido. Ãštil. Adaptable.</h2>
        <p class="sub">Menos ruido, mÃ¡s resultados.</p>
        <div class="grid">
          <article class="tile"><span class="ico">âš¡</span><b>RÃ¡pido</b><p>Respuestas claras al instante.</p></article>
          <article class="tile"><span class="ico">ðŸ§ </span><b>Ãštil</b><p>AutomatizaciÃ³n real para tu dÃ­a.</p></article>
          <article class="tile"><span class="ico">ðŸŽ¯</span><b>Adaptable</b><p>Se ajusta a tu forma de trabajar.</p></article>
        </div>
      </div>
    </section>

    <section class="section" id="waitlist">
      <div class="container center">
        <h2>Ãšnete a la lista</h2>
        <p class="sub">Te avisarÃ© cuando abramos acceso.</p>
        <div class="wait">
          <form id="waitlist-form">
            <div class="row">
              <input id="email" type="email" required placeholder="tu@email.com" />
              <button type="submit">Apuntarme</button>
            </div>
            <div class="ok" id="ok-msg">Â¡Perfecto! Quedas dentro âœ…</div>
          </form>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container center">
        <h2>EvoluciÃ³n del logo</h2>
        <p class="sub">Del concepto al definitivo.</p>
        <div class="logos">
          {logos.map((logo) => (
            <article class="logo-card">
              <img src={`/alfred-landing/logos/${logo.file}`} alt={logo.label} loading="lazy" />
              <div class="label">{logo.label}</div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <script>
      (async () => {
        const countEl = document.getElementById('visit-count');
        const localVisits = () => {
          const k = 'alfred_visits_fallback';
          const n = (parseInt(localStorage.getItem(k) || '0', 10) || 0) + 1;
          localStorage.setItem(k, String(n));
          return n;
        };
        try {
          const r = await fetch('https://api.countapi.xyz/hit/alfred-claw-artiles/alfred-landing-visits');
          const d = await r.json();
          countEl.textContent = Number.isFinite(d?.value) ? String(d.value) : String(localVisits());
        } catch {
          countEl.textContent = String(localVisits());
        }

        const form = document.getElementById('waitlist-form');
        const ok = document.getElementById('ok-msg');
        form.addEventListener('submit', (e) => {
          e.preventDefault();
          const email = (document.getElementById('email').value || '').trim().toLowerCase();
          if (!email) return;
          const key = 'alfred_waitlist_txt';
          const prev = localStorage.getItem(key) || '';
          const line = `${new Date().toISOString()}\t${email}`;
          localStorage.setItem(key, (prev ? prev + '\n' : '') + line);
          ok.style.display = 'block';
          form.reset();
        });
      })();
    </script>
  </body>
</html>
