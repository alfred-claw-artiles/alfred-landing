      .waitlist{padding:16px}
      .row{display:flex;gap:10px;flex-wrap:wrap}
      input[type="email"]{flex:1;min-width:220px;background:#0b1328;color:var(--txt);border:1px solid var(--line);border-radius:10px;padding:12px}
      button{background:#1d3d75;color:#fff;border:1px solid #2f5aa1;padding:12px 14px;border-radius:10px;font-weight:600;cursor:pointer}
      .ok{font-size:.9rem;color:#b8ffd5;margin-top:8px;display:none}
      .logos{margin-top:34px}
      .logo-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:14px}
      .logo-card{background:var(--card);border:1px solid var(--line);border-radius:13px;padding:10px}
      .logo-card img{width:100%;aspect-ratio:1/1;object-fit:cover;border-radius:10px}
      .label{margin-top:7px;color:#cfdbff;font-size:.92rem}
    </style>
